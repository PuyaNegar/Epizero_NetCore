
@model WebViewModels.IdentitiesViewModels.SelectedFeildViewModel
<style type="text/css">
    .txt-field {
        height: 38px;
    }
</style>

<div class="modal fade" id="SelectedFieldModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">انتخاب رشته</h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>*@
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="FeildId">رشته<span class="required">*</span></label>
                            <div class="select-box">
                                <select asp-for="FieldId" class="form-control txt-field">
                                    <option value="1"> بدون رشته تحصیلی </option>
                                    <option value="2"> ریاضی فیزیک </option>
                                    <option value="3"> علوم تجربی </option>
                                    <option value="4"> علوم انسانی </option>
                                    <option value="5"> هنر </option>
                                </select>
                            </div>
                            <span asp-validation-for="FieldId" class="validate-error text-danger"></span>
                        </div>
                    </div>
                 
                </div>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>*@
                <button type="button" class="btn btn-success btn-Update_Field" data-dismiss="modal">ثبت</button>
            </div>
        </div>
    </div>
</div>
