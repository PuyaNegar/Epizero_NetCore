<div id="EditBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="EditForm" role="form">
                <div class="modal-header edit-modal">
                    <button style="float:left" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  <strong>نمایش سفارش</strong>   </h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-sm-6 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>
                                    شماره سفارش
                                </label>
                                <input readonly="readonly" type="text" class="form-control" data-bind="value: infoFinalizedOrders().InvoiceNo">
                            </div>
                        </div>
                        <div class="col-sm-6 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>
                                    تاریخ و زمان ثبت
                                </label>
                                <input readonly="readonly" type="text" class="form-control" data-bind="value: infoFinalizedOrders().OrderRegDateTime">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>
                                    نام مشتری
                                </label>
                                <input readonly="readonly" type="text" class="form-control" data-bind="value: infoFinalizedOrders().StudentUserFullName">
                            </div>
                        </div>

                    </div>



                    <hr />
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <center><h5><b>محصولات سفارش</b> </h5> </center>
                        </div>

                        <div class="col-sm-12 col-xs-12" style="margin:5px 0 20px 0">
                            <table class="table table-bordered table-hover">
                                <thead style="background-color:#ccc;">
                                    <tr>
                                        <th class="right">نوع محصول</th>
                                        <th class="right">نام محصول</th>
                                        <th class="right">قیمت</th>
                                        <th class="right">درصد تخفیف</th>
                                        <th class="right">مبلغ کد تخفیف</th>
                                        <th class="right">قیمت نهایی</th>
                                    </tr>
                                </thead>
                                <tbody data-bind="foreach: infoFinalizedOrders().OrderDetails">
                                    <tr>
                                        <td data-bind="text: AcademyProductTypeName"></td>
                                        <td data-bind="text: AcademyProductName"></td>
                                        <td data-bind="text: Price"></td>
                                        <td data-bind="text: DiscountPercent + '%'"></td>
                                        <td data-bind="text:  DiscountCodeAmount"></td>
                                        <td data-bind="text: FinalPrice"></td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr />
                    <div class="row">

                        <div class="col-md-4 col-sm-6 col-xs-12 pull-right">
                            <div class="form-group">
                                <label class="f-size-13">مبلغ کل فاکتور(بدون احتساب تخفیف) (تومان)</label>
                                <input  readonly="readonly" type="text" class="form-control currency" data-bind="value: infoFinalizedOrders().SubTotal">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12 pull-right">
                            <div class="form-group">
                                <label class="f-size-13">مبلغ کل فاکتور (بااحتساب تخفیف) (تومان)</label>
                                <input  readonly="readonly" type="text" class="form-control" data-bind="value: infoFinalizedOrders().TotalPriceWithDiscount">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>مبلغ کد تخفیف (تومان)</label>
                                <input   readonly="readonly" type="text" class="form-control currency" data-bind="value: infoFinalizedOrders().TotalDiscountCodeAmount">
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>کد تخفیف</label>
                                <input  readonly="readonly" type="text" class="form-control currency" data-bind="value: infoFinalizedOrders().DiscountCode">
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>مبلغ پرداخت‌ شده (تومان)</label>
                                <input readonly="readonly" type="text" class="form-control currency" data-bind="value: infoFinalizedOrders().PaymentAmount">
                            </div>
                        </div>
                    </div>

                </div>
                   
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" style="width:100px; height:30px;"> بستن </button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
