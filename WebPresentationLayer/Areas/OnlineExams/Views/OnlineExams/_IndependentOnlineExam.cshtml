@{
    var StudentOnlineExam = (List<WebViewModels.TrainingsViewModels.StudentCoursesViewModel>)ViewBag.IndependentOnlineExam;
    int i = 1;
}
<style type="text/css">
    td a {
        display: inline-block;
    }

    .bg-round-a {
        border-radius: 15px;
        padding: 0px 10px 3px 10px;
        height: 30px;
        line-height: 30px;
        font-weight: 500;
        color: #fff;
        transition: all .3s;
    }
</style>
@if (StudentOnlineExam.Any())
{
    <div class="container">
        <div class="row">
            <div class="cl-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th class="right">عنوان</th>
                                <th class="right">مدرس</th>
                                <th class="right">تاریخ شروع</th>
                                <th class="right">تاریخ پایان</th>
                                <th class="right">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in StudentOnlineExam)
                            {
                                <tr>
                                    <th class="center">@i</th>
                                    <td>@item.Name</td>
                                    <td>@item.TeacherFullName</td>
                                    <td>@item.StartDateTime</td>
                                    <td>@item.EndDateTime</td>
                                    <td style="width:120px">
                                        @*<a class="bg-color-blue ffff bg-round-a" href="@item.Id">
                        ورود به آزمون
                    </a>*@
                                        <a class="bg-color-red ffff bg-round-a" href="/Trainings/Courses?CoursesId=@item.Id">
                                            مشاهده
                                        </a>
                                    </td>
                                </tr>
                                { i++; }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="box-empty">
                <div class="empty">
                    <img src="/assets/img/box-empty.svg" alt="آزمون  اپیزرو">
                    <p>آزمون مستقل برای شما ثبت نشده است.</p>
                </div>
            </div>
        </div>
    </div>
}
