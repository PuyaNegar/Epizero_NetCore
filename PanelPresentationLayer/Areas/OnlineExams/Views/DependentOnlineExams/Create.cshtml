@model PanelViewModels.OnlineExamsViewModels.OnlineExamsViewModel

<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" data-bind="value: c().Name">
                                <span asp-validation-for="Name" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TeacherUserId"></label>
                                <select asp-for="TeacherUserId" class="form-control" data-bind="value: c().TeacherUserId">
                                    <option value="">لطفا انتخاب کنید ...</option>
                                    @foreach (var item in ViewBag.Teachers)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="TeacherUserId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="StartDate"></label>
                                <input data-mask="9999/99/99" asp-for="StartDate" class="form-control" data-bind="value: c().StartDate">
                                <span asp-validation-for="StartDate" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="StartTime"></label>
                                <input asp-for="StartTime" class="form-control clockpicker" readonly="readonly" placeholder="جهت انتخاب ساعت کليک کنید" data-autoclose="true" data-bind="value: c().StartTime">
                                <span asp-validation-for="StartTime" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Duration"></label>
                                <input type="text" asp-for="Duration" class="form-control" data-bind="value: c().Duration">
                                <span asp-validation-for="Duration" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="MaxGrade"></label>
                                <input type="text" asp-for="MaxGrade" class="form-control" data-bind="value: c().MaxGrade">
                                <span asp-validation-for="MaxGrade" class="danger"></span>
                            </div>
                        </div>

                    </div>
                   
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="AllowedTimeToEnter"></label>
                                <input type="text" asp-for="AllowedTimeToEnter" class="form-control" data-bind="value: c().AllowedTimeToEnter">
                                <span asp-validation-for="AllowedTimeToEnter" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="QuestionTypeId"></label>
                                <select asp-for="QuestionTypeId" class="form-control" data-bind="value: c().QuestionTypeId">
                                    @*<option value="">لطفاٌ نوع سوالات را انتخاب کنید ...</option>*@
                                    @*<option value="1">تشریحی</option>*@
                                    <option value="2">تستی</option>
                                    @*<option value="3">تستی-تشریحی</option>*@
                                </select>
                                <span asp-validation-for="QuestionTypeId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IsRandomQuestions"></label>
                                <select asp-for="IsRandomQuestions" class="form-control" data-bind="value: c().IsRandomQuestions">
                                    <option value="1">بلی</option>
                                    <option value="0">خیر</option>
                                </select>
                                <span asp-validation-for="IsRandomQuestions" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="HasNegativePoint"></label>
                                <select asp-for="HasNegativePoint" class="form-control" data-bind="value: c().HasNegativePoint">
                                    <option value="1">بلی</option>
                                    <option value="0">خیر</option>
                                </select>
                                <span asp-validation-for="HasNegativePoint" class="danger"></span>
                            </div>

                        </div>
                        <div class="col-md-4 random-div">
                            <div class="form-group">
                                <label style="font-size:12px;" asp-for="IsRandomOption"></label>
                                <select disabled asp-for="IsRandomOption" class="form-control" data-bind="value: c().IsRandomOption">
                                    @*<option value="1">بلی</option>*@
                                    <option selected value="0">خیر</option>
                                </select>
                                <span asp-validation-for="IsRandomOption" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IsAbleToEnterExpiredExam"></label>
                                <select asp-for="IsAbleToEnterExpiredExam" class="form-control" data-bind="value: c().IsAbleToEnterExpiredExam">
                                    <option value="1">بلی</option>
                                    <option value="0">خیر</option>
                                </select>
                                <span asp-validation-for="IsAbleToEnterExpiredExam" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="IsVisibleOnSite"></label>
                                <select asp-for="IsVisibleOnSite" class="form-control" data-bind="value: c().IsVisibleOnSite">
                                    <option value="1">بلی</option>
                                    <option value="0">خیر</option>
                                </select>
                                <span asp-validation-for="IsVisibleOnSite" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12">
                            <div class="form-group">
                                <label asp-for="AnalysisVideoLink"></label>
                                <textarea rows="2" asp-for="AnalysisVideoLink" class="form-control" data-bind="value: c().AnalysisVideoLink"></textarea>
                                <span asp-validation-for="AnalysisVideoLink" class="danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
