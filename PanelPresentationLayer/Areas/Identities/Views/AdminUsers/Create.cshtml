@model PanelViewModels.IdentitiesViewModels.AdminUsersViewModel

<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">



                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" data-bind="value: c().UserName">
                        <span asp-validation-for="UserName" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control" data-bind="value: c().Password">
                        <span asp-validation-for="Password" class="danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RepPassword"></label>
                        <input type="password" asp-for="RepPassword" class="form-control" data-bind="value: c().RepPassword">
                        <span asp-validation-for="RepPassword" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" data-bind="value: c().FirstName">
                        <span asp-validation-for="FirstName" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" data-bind="value: c().LastName">
                        <span asp-validation-for="LastName" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserGroupId"></label>
                        <select asp-for="UserGroupId" class="form-control" data-bind="value: c().UserGroupId">
                            <option value="1">مدیر سیستم</option>
                            <option value="4">پشتیبان</option>
                            <option value="5">همکار فروش</option>
                            <option value="6">مشاور</option>
                        </select>
                        <span asp-validation-for="UserGroupId" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsActive"></label>
                        <select disabled="disabled" asp-for="IsActive" class="form-control" data-bind="value: c().IsActive">
                            <option selected="selected" value="1">فعال</option>
                            <option value="0">غیر فعال</option>
                        </select>
                        <span asp-validation-for="IsActive" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender"></label>
                        <select asp-for="Gender" class="form-control" data-bind="value: c().Gender">
                            <option value="1">مرد</option>
                            <option value="0">زن</option>
                        </select>
                        <span asp-validation-for="Gender" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
