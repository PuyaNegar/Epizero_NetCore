@model PanelViewModels.IdentitiesViewModels.StudentUsersViewModel

<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="CityId"></label>
                                <div class="input-group">
                                    <input readonly="readonly" asp-for="CityId" type="hidden" class="form-control" data-bind="value: c().CityId" />
                                    <input readonly="readonly" asp-for="CityName" type="text" class="form-control" data-bind="value: c().CityName" />
                                    <span class="input-group-btn">
                                        <button id="CitySelectBtn" class="btn btn-primery" type="button">انتخاب</button>
                                    </span>
                                </div>
                                <span asp-validation-for="CityId" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">

                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" class="form-control" data-bind="value: c().UserName">
                                <span asp-validation-for="UserName" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" data-bind="value: c().FirstName">
                                <span asp-validation-for="FirstName" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" data-bind="value: c().LastName">
                                <span asp-validation-for="LastName" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="BirthDay"></label>
                                <input data-mask="9999/99/99" asp-for="BirthDay" class="form-control" data-bind="value: c().BirthDay">
                                <span asp-validation-for="BirthDay" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="HomePhoneNumber"></label>
                                <input asp-for="HomePhoneNumber" class="form-control" data-bind="value: c().HomePhoneNumber">
                                <span asp-validation-for="HomePhoneNumber" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="FatherMobNo"></label>
                                <input asp-for="FatherMobNo" class="form-control" data-bind="value: c().FatherMobNo">
                                <span asp-validation-for="FatherMobNo" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="MotherMobNo"></label>
                                <input asp-for="MotherMobNo" class="form-control" data-bind="value: c().MotherMobNo">
                                <span asp-validation-for="MotherMobNo" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="NationalCode"></label>
                                <input asp-for="NationalCode" class="form-control" data-bind="value: c().NationalCode">
                                <span asp-validation-for="NationalCode" class="danger"></span>
                            </div>
                        </div>


                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="Gender"></label>
                                <select asp-for="Gender" class="form-control" data-bind="value: c().Gender">
                                    <option value="1">مرد</option>
                                    <option value="0">زن</option>
                                </select>
                                <span asp-validation-for="Gender" class="danger"></span>
                            </div>

                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" data-bind="value: c().Email">
                                <span asp-validation-for="Email" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="SchoolName"></label>
                                <input asp-for="SchoolName" class="form-control" data-bind="value: c().SchoolName">
                                <span asp-validation-for="SchoolName" class="danger"></span>
                            </div>
                        </div>

                    </div>


                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="FavoriteJob"></label>
                                <input asp-for="FavoriteJob" class="form-control" data-bind="value: c().FavoriteJob">
                                <span asp-validation-for="FavoriteJob" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="SchoolTypeId"></label>
                                <select asp-for="SchoolTypeId" class="form-control" data-bind="value: c().SchoolTypeId">
                                    <option value="1"> دولتی </option>
                                    <option value="2">غیر انتفاعی </option>
                                    <option value="3">نمونه دولتی</option>
                                    <option value="4">شاهد و ایثارگران</option>
                                    <option value="5">استعدادهای درخشان</option>
                                    <option value="6">سایر موارد</option>
                                </select>
                                <span asp-validation-for="SchoolTypeId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="IsActive"></label>
                                <select disabled="disabled" asp-for="IsActive" class="form-control" data-bind="value: c().IsActive">
                                    <option selected="selected" value="1">فعال</option>
                                    <option value="0">غیر فعال</option>
                                </select>
                                <span asp-validation-for="IsActive" class="danger"></span>
                            </div>
                        </div>


                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="IntroductionWithAcademyTypeId"></label>
                                <select asp-for="IntroductionWithAcademyTypeId" class="form-control" data-bind="value: c().IntroductionWithAcademyTypeId">
                                    <option value="">لطفا انتخاب کنید...</option>
                                    <option value="1">اس ام اس</option>
                                    <option value="2">معرفی دوستان</option>
                                    <option value="3">اینستاگرام</option>
                                    <option value="4">تلگرام</option>
                                    <option value="5">آپارات</option>
                                    <option value="6">جستجو در گوگل</option>
                                    <option value="7">اساتید</option>
                                    <option value="8">دیگر سایت ها</option>
                                    <option value="10">سایر موارد</option>
                                </select>
                                <span asp-validation-for="IntroductionWithAcademyTypeId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label asp-for="LevelId"></label>
                                <select asp-for="LevelId" class="form-control" data-bind="value: c().LevelId">
                                    <option value=""> لطفا انتخاب کنید ...</option>
                                    @foreach (var item in ViewBag.Levels)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="LevelId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 fileds">
                            <div class="form-group">
                                <label asp-for="FeildId"></label>
                                <select asp-for="FeildId" class="form-control" data-bind="value: c().FeildId">
                                    <option value=""> لطفا انتخاب کنید ...</option>
                                    @foreach (var item in ViewBag.Fields)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="FeildId" class="danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label style="margin-top:15px;margin-bottom:20px;text-align:center;display:block" asp-for="PersonalPicPath"></label>
                            <div class="form-group">
                                @await Html.PartialAsync("~/Views/Component/ImageUploader.cshtml",
                                new PanelPresentationLayer.ComponentModel.ImageUploader()
                                {
                                ButtonFarsiName = "آپلود عکس",
                                DefualuNullImagePath = "/images/DefaultFlag.png",
                                Name = "PersonalPicPath",
                                KnockoutExpressionString = "MainViewModel.c().PersonalPicPath",
                                MaxImageHeight = 400,
                                MaxImageWidth = 400,
                                MinImageHeight = 400,
                                MinImageWidth = 400,
                                MaxImageSize = 500,
                                HasDeleteBtn = true,
                                Description = "فرمت‌های قابل قبول : JPG، JPEG و GIF \r\n حداقل اندازه مجاز تصویر : 400 در 400 پیکسل \r\n حداکثر اندازه مجاز تصویر : 400 در 400 پیکسل \r\n حداکثر حجم مجاز تصویر : 50 کیلوبایت"
                                })
                            </div>
                            <span asp-validation-for="PersonalPicPath" class="danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label style="margin-top:15px;margin-bottom:20px;text-align:center;display:block" asp-for="NationalCardPicPath"></label>
                            <div class="form-group">
                                @await Html.PartialAsync("~/Views/Component/ImageUploader.cshtml",
                                new PanelPresentationLayer.ComponentModel.ImageUploader()
                                {
                                ButtonFarsiName = "آپلود کارت ملی",
                                DefualuNullImagePath = "/images/DefaultFlag.png",
                                Name = "NationalCardPicPath",
                                KnockoutExpressionString = "MainViewModel.c().NationalCardPicPath",
                                MaxImageHeight = 400,
                                MaxImageWidth = 400,
                                MinImageHeight = 400,
                                MinImageWidth = 400,
                                MaxImageSize = 500,
                                HasDeleteBtn = true,
                                Description = "فرمت‌های قابل قبول : JPG، JPEG و GIF \r\n حداقل اندازه مجاز تصویر : 400 در 400 پیکسل \r\n حداکثر اندازه مجاز تصویر : 400 در 400 پیکسل \r\n حداکثر حجم مجاز تصویر : 50 کیلوبایت"
                                })
                            </div>
                            <span asp-validation-for="NationalCardPicPath" class="danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
