@model PanelViewModels.ContentsViewModels.ProductPromosViewModel
@using PanelPresentationLayer.ComponentModel
@{
    var Options = new ComboBoxOptions()
    {
        Url = "/TrainingManagement/Products/Read/",
        ComboBoxName = "UserChosen",
        IsMultiSelect = true,
        ComboBoxDataColumn = new List<ComboBoxDataColumn>() {
        new ComboBoxDataColumn() { ColumnTitle = "شناسه"  , ColumnName="Id" , IsVisible=false , IsSearchable=false } ,
        new ComboBoxDataColumn() { ColumnTitle = "دوره"  , ColumnName="Name" , IsSearchable= true } ,
 },
        ValueField = "Id",
        TextField = "Name",
        TargetValueInputId = "ProductIds"
    };
}
<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="ProductIds"></label>
                                <input asp-for="ProductIds" class="form-control" data-bind="value: c().ProductIds" style="display:none;">
                                @await Html.PartialAsync("~/Views/Component/ChosenCombobox.cshtml", Options)
                                <span asp-validation-for="ProductIds" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" id="ComboBoxSection">
                        <label asp-for="ProductPromoSectionGroupId">سکشن تبلیغاتی</label>
                        <select asp-for="ProductPromoSectionGroupId" class="form-control" data-bind="value : c().ProductPromoSectionGroupId">
                            @foreach (var item in ViewBag.PromoSections)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="ProductPromoSectionGroupId" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Inx"></label>
                        <input asp-for="Inx" class="form-control" data-bind="value: c().Inx" type="text">
                        <span asp-validation-for="Inx" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
