@model PanelViewModels.EditPrefix<PanelViewModels.ContentsViewModels.OnlineExamPromosViewModel>


<div id="EditBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="EditForm" role="form">
                <div class="modal-header edit-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  <strong>ويرايش</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Edit.CourseId"></label>
                                <input asp-for="Edit.CourseId" class="form-control" data-bind="value: e().CourseId" style="display:none">
                                <input asp-for="Edit.CourseName" class="form-control" data-bind="value: e().CourseName" readonly="readonly">

                            </div>
                        </div>
                    </div>
                    <div class="form-group" id="ComboBoxSection">
                        <label asp-for="Edit.OnlineExamPromoSectionGroupId">سکشن تبلیغاتی</label>
                        <select asp-for="Edit.OnlineExamPromoSectionGroupId" class="form-control" data-bind="value : e().OnlineExamPromoSectionGroupId">
                            @foreach (var item in ViewBag.PromoSections)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Edit.OnlineExamPromoSectionGroupId" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Edit.Inx"></label>
                        <input asp-for="Edit.Inx" class="form-control" data-bind="value: e().Inx" type="text">
                        <span asp-validation-for="Edit.Inx" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-info btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
