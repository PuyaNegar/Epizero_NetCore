@model PanelViewModels.ContentsViewModels.SlidersViewModel

<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" data-bind="value: c().Title">
                            <span asp-validation-for="Title" class="danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Alt"></label>
                            <input asp-for="Alt" class="form-control" data-bind="value: c().Alt">
                            <span asp-validation-for="Alt" class="danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Link"></label>
                        <input asp-for="Link" class="form-control" data-bind="value: c().Link">
                        <span asp-validation-for="Link" class="danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Inx"></label>
                            <input asp-for="Inx" type="text" class="form-control" data-bind="value: c().Inx">
                            <span asp-validation-for="Inx" class="danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="IsActive"></label>
                            <select disabled="disabled" asp-for="IsActive" class="form-control" data-bind="value: c().IsActive">
                                <option selected="selected" value="1">فعال</option>
                                <option value="0">غيرفعال</option>
                            </select>
                            <span asp-validation-for="IsActive" class="danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" data-bind="value: c().Description" />
                        <span asp-validation-for="Description" class="danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <label style="margin-top:15px;margin-bottom:20px;text-align:center;display:block" asp-for="PicPath"></label>
                            <div class="form-group">
                                @await Html.PartialAsync("~/Views/Component/ImageUploader.cshtml",
                               new PanelPresentationLayer.ComponentModel.ImageUploader()
                                    {
                                        ButtonFarsiName = "آپلود عکس",
                                   DefualuNullImagePath = "/images/DefaultFlag.png",
                                   Name = "SlidersPicPath",
                                   KnockoutExpressionString = "MainViewModel.c().PicPath",
                                   MaxImageHeight = 400,
                                   MaxImageWidth = 1400,
                                   MinImageHeight = 400,
                                   MinImageWidth = 1400,
                                   MaxImageSize = 1024,
                                   HasDeleteBtn = true,
                                   Description = "فرمت‌های قابل قبول : JPG، JPEG و GIF \r\n حداقل اندازه مجاز تصویر : 1400 در 400 پیکسل \r\n حداکثر اندازه مجاز تصویر : 1400 در 400 پیکسل \r\n حداکثر حجم مجاز تصویر : 1024 کیلوبایت"
                               })
                            </div>
                        </div>
                        <span asp-validation-for="PicPath" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
