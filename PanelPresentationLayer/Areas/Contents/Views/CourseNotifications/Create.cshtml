@model PanelViewModels.ContentsViewModels.CourseNotificationsViewModel

<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
       <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="CourseNotificationIds"></label>
                            <select asp-for="CourseNotificationIds" class="form-control" data-bind="value: c().CourseNotificationIds" data-placeholder="تگ‌ها را انتخاب کنید" multiple>
                                @foreach (var item in ViewBag.Courses)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="CourseNotificationIds" class="danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Title"></label>
                                <input asp-for="Title" class="form-control" data-bind="value: c().Title">
                                <span asp-validation-for="Title" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FromDate"></label>
                                <input data-mask="9999/99/99" asp-for="FromDate" class="form-control" data-bind="value: c().FromDate">
                                <span asp-validation-for="FromDate" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ToDate"></label>
                                <input data-mask="9999/99/99" asp-for="ToDate" class="form-control" data-bind="value: c().ToDate">
                                <span asp-validation-for="ToDate" class="danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IsActive"></label>
                                <select asp-for="IsActive" class="form-control" data-bind="value: c().IsActive">
                                    <option value="1">فعال</option>
                                    <option value="0">غيرفعال</option>
                                </select>
                                <span asp-validation-for="IsActive" class="danger"></span>
                            </div>

                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea rows="3" asp-for="Description" class="form-control" data-bind="value: c().Description"></textarea>
                                <span asp-validation-for="Description" class="danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
