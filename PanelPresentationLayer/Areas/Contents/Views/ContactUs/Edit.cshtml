@model PanelViewModels.EditPrefix<PanelViewModels.ContentsViewModels.ContactUsViewModel>

<div id="EditBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="EditForm" role="form">
                <div class="modal-header edit-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  <strong>ويرايش</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.FullName"></label>
                                <input asp-for="Edit.FullName" class="form-control" data-bind="value: e().FullName" readonly="readonly">
                                <span asp-validation-for="Edit.FullName" class="danger"></span>
                            </div>
                        </div>
                       
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.MobNo"></label>
                                <input asp-for="Edit.MobNo" class="form-control" data-bind="value: e().MobNo" readonly="readonly">
                                <span asp-validation-for="Edit.MobNo" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.Email"></label>
                                <input asp-for="Edit.Email" class="form-control" data-bind="value: e().Email" readonly="readonly">
                                <span asp-validation-for="Edit.Email" class="danger"></span>
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.CourseName"></label>
                                <input asp-for="Edit.CourseName" class="form-control" data-bind="value: e().CourseName" readonly="readonly">
                                <span asp-validation-for="Edit.CourseName" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.IsRead"></label>
                                <select asp-for="Edit.IsRead" class="form-control" data-bind="value: e().IsRead">
                                    <option value="1">بلی</option>
                                    <option value="0">خیر</option>
                                </select>
                                <span asp-validation-for="Edit.IsRead" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.Description"></label>
                                <textarea asp-for="Edit.Description" class="form-control" data-bind="value: e().Description" readonly="readonly"></textarea>
                                <span asp-validation-for="Edit.Description" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-info btn-sm">ویرایش</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
