@model PanelViewModels.ContentsViewModels.BlogsViewModel

<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" data-bind="value: c().Title">
                        <span asp-validation-for="Title" class="danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BlogGroupId"></label>
                        <select asp-for="BlogGroupId" class="form-control" data-bind="value: c().BlogGroupId">
                            <option value="">لطفا انتخاب کنید ...</option>
                            @foreach (var item in ViewBag.BlogGroups)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="BlogGroupId" class="danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <label style="margin-top:15px;margin-bottom:20px;text-align:center;display:block" asp-for="PicPath"></label>
                            <div class="form-group">
                                @await Html.PartialAsync("~/Views/Component/ImageUploader.cshtml",
                                    new PanelPresentationLayer.ComponentModel.ImageUploader()
                                    {
                                        ButtonFarsiName = "آپلود عکس",
                                        DefualuNullImagePath = "/images/DefaultFlag.png",
                                        Name = "BlogsPicPath",
                                        KnockoutExpressionString = "MainViewModel.c().PicPath",
                                        MaxImageHeight = 2000,
                                        MaxImageWidth = 2000,
                                        MinImageHeight = 100,
                                        MinImageWidth = 100,
                                        MaxImageSize = 1024,
                                        HasDeleteBtn = true,
                                        Description = "فرمت‌های قابل قبول : JPG، JPEG و GIF \r\n حداقل اندازه مجاز تصویر : 1080 در 1920 پیکسل \r\n حداکثر اندازه مجاز تصویر : 1080 در 1920 پیکسل \r\n حداکثر حجم مجاز تصویر : 1024 کیلوبایت"
                                    })
                            </div>
                        </div>
                        <span asp-validation-for="PicPath" class="danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label asp-for="Text" class="col-sm-2 col-xs-12 control-label"></label>
                                <div class="col-xs-12">
                                    <textarea style="display:none;" asp-for="Text" class="form-control" data-bind="value: c().Text"></textarea>
                                    <div>
                                        <div id="createSummernote" class="summernote"></div>
                                    </div>
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
