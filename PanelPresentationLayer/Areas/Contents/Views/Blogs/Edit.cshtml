@model PanelViewModels.EditPrefix<PanelViewModels.ContentsViewModels.BlogsViewModel>

<div id="EditBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="EditForm" role="form">
                <div class="modal-header edit-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  <strong>ويرايش</strong>   </h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="Edit.Title"></label>
                        <input asp-for="Edit.Title" class="form-control" data-bind="value: e().Title">
                        <span asp-validation-for="Edit.Title" class="danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Edit.BlogGroupId"></label>
                        <select asp-for="Edit.BlogGroupId" class="form-control" data-bind="value: e().BlogGroupId">
                            @foreach (var item in ViewBag.BlogGroups)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Edit.BlogGroupId" class="danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <label style="margin-top:15px;margin-bottom:20px;text-align:center;display:block" asp-for="Edit.PicPath"></label>
                            <div class="form-group">
                                @await Html.PartialAsync("~/Views/Component/ImageUploader.cshtml",
                                    new PanelPresentationLayer.ComponentModel.ImageUploader()
                                         {
                                             ButtonFarsiName = "آپلود عکس",
                                        DefualuNullImagePath = "/images/DefaultFlag.png",
                                        Name = "EditBlogsPicPath",
                                        KnockoutExpressionString = "MainViewModel.e().PicPath",
                                        MaxImageHeight = 2000,
                                        MaxImageWidth = 2000,
                                        MinImageHeight = 100,
                                        MinImageWidth = 100,
                                        MaxImageSize = 1024,
                                        HasDeleteBtn = false,
                                        Description = "فرمت‌های قابل قبول : JPG، JPEG و GIF \r\n حداقل اندازه مجاز تصویر : 1 در 1 پیکسل \r\n حداکثر اندازه مجاز تصویر : 2000 در 2000 پیکسل \r\n حداکثر حجم مجاز تصویر : 1024 کیلوبایت"
                                    })
                            </div>
                            <span asp-validation-for="Edit.PicPath" class="danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.Text" class="col-sm-2 col-xs-12 control-label"></label>
                                <div class="col-xs-12">
                                    <textarea style="display:none;" asp-for="Edit.Text" class="form-control" data-bind="value: e().Text"></textarea>
                                    <div>
                                        <div id="editSummernote" class="summernote"></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-info btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
