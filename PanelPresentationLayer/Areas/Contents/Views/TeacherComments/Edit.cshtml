@model PanelViewModels.EditPrefix<PanelViewModels.ContentsViewModels.TeacherCommentsViewModel>

<div id="EditBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="EditForm" role="form">
                <div class="modal-header edit-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  <strong>ويرايش</strong>   </h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Edit.TeacherUserName"></label>
                            <input asp-for="Edit.TeacherUserName" readonly="readonly" class="form-control" data-bind="value: e().TeacherUserName">
                            <span asp-validation-for="Edit.TeacherUserName" class="danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Edit.StudentUserName"></label>
                            <input asp-for="Edit.StudentUserName" readonly="readonly" class="form-control" data-bind="value: e().StudentUserName">
                            <span asp-validation-for="Edit.StudentUserName" class="danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Edit.RegDateTime"></label>
                            <input asp-for="Edit.RegDateTime" readonly="readonly" class="form-control" data-bind="value: e().RegDateTime">
                            <span asp-validation-for="Edit.RegDateTime" class="danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-12">
                            <label asp-for="Edit.Comment"></label>
                            <textarea asp-for="Edit.Comment" rows="5" class="form-control" data-bind="value: e().Comment"></textarea>
                            <span asp-validation-for="Edit.Comment" class="danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        @*<div class="form-group col-sm-6">
                            <label asp-for="Edit.IsActive"></label>
                            <select asp-for="Edit.IsActive" class="form-control" data-bind="value: e().IsActive">
                                <option value="1">فعال</option>
                                <option value="0">غيرفعال</option>
                            </select>
                            <span asp-validation-for="Edit.IsActive" class="danger"></span>
                        </div>*@

                        <div class="form-group col-sm-6">
                            <label asp-for="Edit.IsConfirmed"></label>
                            <select asp-for="Edit.IsConfirmed" class="form-control" data-bind="value: e().IsConfirmed">
                                <option value="1">تایید</option>
                                <option value="0">عدم تایید</option>
                            </select>
                            <span asp-validation-for="Edit.IsConfirmed" class="danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-info btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
