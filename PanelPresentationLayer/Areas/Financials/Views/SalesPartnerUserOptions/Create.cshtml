@model PanelViewModels.FinancialsViewModels.SalesPartnerUserOptionsViewModel

<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
       <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="SalesPartnerUserId"></label>
                        <select asp-for="SalesPartnerUserId" class="form-control" data-bind="value: c().SalesPartnerUserId">
                            <option value="">لطفا انتخاب کنید ...</option>
                            @foreach (var item in ViewBag.SalesPartnerUsers)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="SalesPartnerUserId" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseId"></label>
                        <select id="coures" class="form-control" data-bind="value : c().CourseId">
                            @foreach (var item in ViewBag.Courses)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="CourseId" class="danger"></span>
                    </div>
                        <div class="form-group">
                            <label asp-for="SalePartnerIsPrepayment"></label>
                            <select asp-for="SalePartnerIsPrepayment" class="form-control" data-bind="value: c().SalePartnerIsPrepayment">
                                <option value="1">قبل از اعمال تخفیف</option>
                                <option value="0">پس از اعمال تخفیف</option>
                            </select>
                            <span asp-validation-for="SalePartnerIsPrepayment" class="danger"></span>
                        </div>
                 

                    <div class="form-group">
                        <label asp-for="Amount"></label>
                        <input type="text" asp-for="Amount" class="form-control currency" data-bind="value: c().Amount">
                        <span asp-validation-for="Amount" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Percent"></label>
                        <input asp-for="Percent" class="form-control" data-bind="value: c().Percent">
                        <span asp-validation-for="Percent" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
