@model PanelViewModels.EditPrefix<PanelViewModels.FinancialsViewModels.ChangeScoreViewModel>

<div id="EditBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="EditForm" role="form">
                <div class="modal-header edit-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  <strong>تغییر اعتبار</strong>   </h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="Edit.Balance"></label>
                        <input asp-for="Edit.Balance" class="form-control" data-bind="value: e().Balance" readonly="readonly">
                        <span asp-validation-for="Edit.Balance" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Edit.QuantityControl"></label>
                        <select asp-for="Edit.QuantityControl" class="form-control" data-bind="value: e().QuantityControl">
                            <option value="">لطفا انتخاب کنید ...</option>
                            <option value="1"> افزایش اعتبار</option>
                            <option value="-1">کاهش اعتبار</option>
                        </select>
                        <span asp-validation-for="Edit.QuantityControl" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Edit.Amount"></label>
                        <input type="text" asp-for="Edit.Amount" class="form-control currency" data-bind="value: e().Amount">
                        <span asp-validation-for="Edit.Amount" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Edit.Comment"></label>
                        <textarea asp-for="Edit.Comment" class="form-control" data-bind="value: e().Comment"></textarea>
                        <span asp-validation-for="Edit.Comment" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-info btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
