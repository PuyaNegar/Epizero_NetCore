@{
    var CourseMeetingStudents = (List<ComboBoxItems>)ViewBag.CourseMeetingStudents;
}
@model PanelViewModels.Prefix.StudentReturnPaymentPrefix<PanelViewModels.FinancialsViewModels.StudentFinancialReturnPaymentsViewModel>
 
<div id="returnPaymentModal" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="returnPaymentForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><strong>عودت وجه</strong></h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="StudentReturnPayment.ReturnAmount"></label>
                        <input type="text" asp-for="StudentReturnPayment.ReturnAmount" class="form-control currency" data-bind="value: returnPayment().ReturnAmount">
                        <span asp-validation-for="StudentReturnPayment.ReturnAmount" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentReturnPayment.RegDateTime"> </label>
                        <input data-mask="9999/99/99" asp-for="StudentReturnPayment.RegDateTime" type="text" data-bind="value: returnPayment().RegDateTime" class="form-control">
                        <span asp-validation-for="StudentReturnPayment.RegDateTime" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentReturnPayment.ReturnPaymentTypeId"></label>
                        <select asp-for="StudentReturnPayment.ReturnPaymentTypeId" class="form-control " data-bind="value: returnPayment().ReturnPaymentTypeId">
                            <option value=""> لطفا انتخاب کنید ...</option>
                            <option value="1"> نقدی </option>
                            <option value="2"> کارت به کارت </option>
                            <option value="3"> چک </option>
                        </select>
                        <span asp-validation-for="StudentReturnPayment.ReturnPaymentTypeId" class="danger"></span>
                    </div>
                    <div class="form-group" id="StudentReturnPayment_PaymentTypeDiv">
                        <label asp-for="StudentReturnPayment.PaymentTypeId"> </label>
                        <select asp-for="StudentReturnPayment.PaymentTypeId" class="form-control" data-bind="value: returnPayment().PaymentTypeId">
                            <option value="">انتخاب کنید ..</option>
                            <option value="1">پرداخت وجه عادی</option>
                            <option value="2">کیف پول</option>
                            <option value="3">اپیزرو کوین</option> 
                        </select>
                        <span asp-validation-for="StudentReturnPayment.PaymentTypeId" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentReturnPayment.CourseMeetingStudentId"> </label>
                        <select asp-for="StudentReturnPayment.CourseMeetingStudentId" class="form-control" data-bind="value: returnPayment().CourseMeetingStudentId">
                            <option value="">لطفا انتخاب کنید ...</option>
                            @foreach (var item in CourseMeetingStudents.Where(c=>!c.IsActive))
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="StudentReturnPayment.CourseMeetingStudentId" class="danger"></span>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="StudentReturnPayment.Description"></label>
                        <textarea asp-for="StudentReturnPayment.Description" class="form-control Description_rp" data-bind="value: returnPayment().Description"></textarea>
                        <span asp-validation-for="StudentReturnPayment.Description" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
