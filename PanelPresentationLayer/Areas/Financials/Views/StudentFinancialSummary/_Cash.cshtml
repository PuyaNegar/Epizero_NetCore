@{
    var CourseMeetingStudents = (List<ComboBoxItems>)ViewBag.CourseMeetingStudents;
}
@model PanelViewModels.Prefix.StudentCashPaymentPrefix<PanelViewModels.FinancialsViewModels.AddStudentFinancialPaymentsViewModel>

<div id="cashModal" class="modal fade " tabindex="-1" role="dialog">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">افزودن پرداخت نقدی</h4>
            </div>
            <form id="cashForm">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="StudentCashPayment.AmountPaid"> </label>
                        <input asp-for="StudentCashPayment.AmountPaid" type="text" data-bind="value: cash().AmountPaid" class="form-control currency">
                        <span asp-validation-for="StudentCashPayment.AmountPaid" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentCashPayment.RegDateTime"> </label>
                        <input data-mask="9999/99/99" asp-for="StudentCashPayment.RegDateTime" type="text" data-bind="value: cash().RegDateTime" class="form-control">
                        <span asp-validation-for="StudentCashPayment.RegDateTime" class="danger"></span>
                    </div>
                    <div class="form-group" id="StudentCashPayment_PaymentTypeDiv">
                        <label asp-for="StudentCashPayment.PaymentTypeId"> </label>
                        <select asp-for="StudentCashPayment.PaymentTypeId" class="form-control" data-bind="value: cash().PaymentTypeId">
                            <option value="1">پرداخت وجه عادی</option>
                            <option value="2">کیف پول</option>
                            <option value="3">اپیزرو کوین</option>
                        </select>
                        <span asp-validation-for="StudentCashPayment.PaymentTypeId" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentCashPayment.CourseMeetingStudentId"> </label>
                        <select asp-for="StudentCashPayment.CourseMeetingStudentId" class="form-control" data-bind="value: cash().CourseMeetingStudentId">
                            <option value="">لطفا انتخاب کنید ...</option>
                            @foreach (var item in CourseMeetingStudents.Where(c=>c.IsActive))
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="StudentCashPayment.CourseMeetingStudentId" class="danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="StudentCashPayment.Description"> </label>
                        <textarea asp-for="StudentCashPayment.Description" type="text" data-bind="value: cash().Description" class="form-control"></textarea>
                        <span asp-validation-for="StudentCashPayment.Description" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">بستن</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
