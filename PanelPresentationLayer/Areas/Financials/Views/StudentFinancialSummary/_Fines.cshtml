@{
    var CourseMeetingStudents = (List<ComboBoxItems>)ViewBag.CourseMeetingStudents;
}
@model PanelViewModels.Prefix.StudentFinesPrefix<PanelViewModels.FinancialsViewModels.StudentFinesViewModel>

<div id="finesModal" class="modal fade " tabindex="-1" role="dialog">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">جریمه</h4>
            </div>
            <form id="finesForm">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="StudentFines.Amount"> </label>
                        <input asp-for="StudentFines.Amount" type="text" data-bind="value: fines().Amount" class="form-control currency">
                        <span asp-validation-for="StudentFines.Amount" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentFines.RegDateTime"> </label>
                        <input data-mask="9999/99/99" asp-for="StudentFines.RegDateTime" type="text" data-bind="value: fines().RegDateTime" class="form-control">
                        <span asp-validation-for="StudentFines.RegDateTime" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentFines.CourseMeetingStudentId"> </label>
                        <select asp-for="StudentFines.CourseMeetingStudentId" class="form-control" data-bind="value: fines().CourseMeetingStudentId">
                            <option value="">لطفا انتخاب کنید ...</option>
                            @foreach (var item in CourseMeetingStudents.Where(c=>!c.IsActive))
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="StudentFines.CourseMeetingStudentId" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentFines.Description"> </label>
                        <textarea asp-for="StudentFines.Description" type="text" data-bind="value: fines().Description" class="form-control"></textarea>
                        <span asp-validation-for="StudentFines.Description" class="danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">بستن</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
