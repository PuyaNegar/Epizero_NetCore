@model PanelViewModels.TrainingManagementViewModels.CourseStudentsViewModel
@{
    var Options = new ComboBoxOptions()
    {
        Url = "/Identities/StudentUsers/Read/",
        ComboBoxName = "StudentUserChosen",
        IsMultiSelect = true,
        ComboBoxDataColumn = new List<ComboBoxDataColumn>() {
new ComboBoxDataColumn() { ColumnTitle = "Id"  , ColumnName="Id" , IsVisible=false , IsSearchable=false } ,
new ComboBoxDataColumn() { ColumnTitle = "نام کاربری"  , ColumnName="UserName" , IsSearchable= true } ,
new ComboBoxDataColumn() { ColumnTitle = "  نام نام خانوادگی"  , ColumnName="FullName" , IsSearchable= true } ,
},
        ValueField = "Id",
        TextField = "FullName",
        TargetValueInputId = "StudentUserIds"

    };
}
<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="StudentUserIds"></label>
                            <input asp-for="StudentUserIds" class="form-control" data-bind="value: c().StudentUserIds" style="display:none;">
                            @await Html.PartialAsync("~/Views/Component/ChosenCombobox.cshtml", Options)
                            <span asp-validation-for="StudentUserIds" class="danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="CourseName"></label>
                            <input readonly="readonly" class="form-control" value="@ViewBag.CourseName">
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
