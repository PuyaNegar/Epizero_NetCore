@model PanelViewModels.TrainingManagementViewModels.LessonsViewModel

<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="form-group">
                                <label asp-for="LevelId"></label>
                                <div class="input-group">
                                    <input asp-for="LevelId" type="hidden" class="form-control" data-bind="value: c().LevelId" />
                                    <input asp-for="LevelName" type="text" class="form-control" data-bind="value: c().LevelName" />
                                    <span class="input-group-btn">
                                        <button id="LevelSelectBtn" class="btn btn-primery" type="button">انتخاب</button>
                                    </span>
                                </div>
                                <span asp-validation-for="LevelId" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="FieldId"></label>
                                <select asp-for="FieldId" class="form-control" data-bind="value: c().FieldId">
                                    <option value="">لطفا انتخاب کنید</option>
                                    @foreach (var item in ViewBag.Fields)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="FieldId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" data-bind="value: c().Name">
                                <span asp-validation-for="Name" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="UnitCount"></label>
                                <input asp-for="UnitCount" class="form-control" data-bind="value: c().UnitCount">
                                <span asp-validation-for="UnitCount" class="danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
