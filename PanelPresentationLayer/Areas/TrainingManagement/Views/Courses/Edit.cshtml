@model PanelViewModels.EditPrefix<PanelViewModels.TrainingManagementViewModels.CoursesViewModel>
@{
    var FAQs = ViewBag.FAQs;
    var OldStudentComments = ViewBag.OldStudentComments;
}
<div id="EditBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="EditForm" role="form">
                <div class="modal-header edit-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  <strong>ویرایش</strong>   </h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Edit.LessonId"></label>
                                <div class="input-group">
                                    <input asp-for="Edit.LessonId" type="hidden" class="form-control" data-bind="value: e().LessonId" />
                                    <input asp-for="Edit.LessonName" readonly="readonly" type="text" class="form-control" data-bind="value: e().LessonName" />
                                    <span class="input-group-btn">
                                        <button id="EditLessonSelectBtn" class="btn btn-primery" type="button">انتخاب</button>
                                    </span>
                                </div>
                                <span asp-validation-for="Edit.LessonId" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.Name"></label>
                                <input asp-for="Edit.Name" class="form-control" data-bind="value: e().Name">
                                <span asp-validation-for="Edit.Name" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.CourseTypeId"></label>
                                <select asp-for="Edit.CourseTypeId" class="form-control" data-bind="value: e().CourseTypeId">
                                    <option value="">لطفا انتخاب کنید ...</option>
                                    <option value="1">آنلاین</option>
                                    <option value="2">آفلاین</option>
                                    <option value="3">جزوه،کتاب</option>
                                </select>
                                <span asp-validation-for="Edit.CourseTypeId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.TeacherUserId"></label>
                                <select disabled asp-for="Edit.TeacherUserId" class="form-control" data-bind="value: e().TeacherUserId">
                                    <option value="">لطفا انتخاب کنید ...</option>
                                    @foreach (var item in ViewBag.Teachers)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Edit.TeacherUserId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.LanguageId"></label>
                                <select asp-for="Edit.LanguageId" class="form-control" data-bind="value: e().LanguageId">
                                    <option value="">لطفا انتخاب کنید ...</option>
                                    <option value="1">فارسی</option>
                                    <option value="2">ترکی</option>
                                    <option value="3">کردی</option>
                                    <option value="4">انگلیسی</option>
                                </select>
                                <span asp-validation-for="Edit.LanguageId" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.Price"></label>
                                <input type="text" asp-for="Edit.Price" class="form-control currency" data-bind="value: e().Price">
                                <span asp-validation-for="Edit.Price" class="danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.CourseDuration"></label>
                                <input asp-for="Edit.CourseDuration" class="form-control" data-bind="value: e().CourseDuration">
                                <span asp-validation-for="Edit.CourseDuration" class="danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.StartDate"></label>
                                <input asp-for="Edit.StartDate" class="form-control" data-bind="value: e().StartDate">
                                <span asp-validation-for="Edit.StartDate" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.EndDate"></label>
                                <input asp-for="Edit.EndDate" class="form-control" data-bind="value: e().EndDate">
                                <span asp-validation-for="Edit.EndDate" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.CourseMeetingCount"></label>
                                <input asp-for="Edit.CourseMeetingCount" class="form-control" data-bind="value: e().CourseMeetingCount">
                                <span asp-validation-for="Edit.CourseMeetingCount" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.IsActive"></label>
                                <select asp-for="Edit.IsActive" class="form-control" data-bind="value: e().IsActive">

                                    <option value="1">فعال</option>
                                    <option value="0">غیر فعال</option>
                                </select>
                                <span asp-validation-for="Edit.IsActive" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.IsMultiTeacher"></label>
                                <select asp-for="Edit.IsMultiTeacher" class="form-control" data-bind="value: e().IsMultiTeacher">

                                    <option value="1">بلی</option>
                                    <option value="0">خیر</option>
                                </select>
                                <span asp-validation-for="Edit.IsMultiTeacher" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.Inx"></label>
                                <input asp-for="Edit.Inx" class="form-control" data-bind="value: e().Inx">
                                <span asp-validation-for="Edit.Inx" class="danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.IsShowDetailsInWeb"></label>
                                <select asp-for="Edit.IsShowDetailsInWeb" class="form-control" data-bind="value: e().IsShowDetailsInWeb">
                                    <option selected="selected" value="0">خیر</option>
                                    <option value="1">بلی</option>
                                </select>
                                <span asp-validation-for="Edit.IsShowDetailsInWeb" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.IsVisibleOnSite"></label>
                                <select asp-for="Edit.IsVisibleOnSite" class="form-control" data-bind="value: e().IsVisibleOnSite">
                                    <option value="1">بلی</option>
                                    <option value="0">خیر</option>
                                </select>
                                <span asp-validation-for="Edit.IsVisibleOnSite" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.Audience"></label>
                                <input asp-for="Edit.Audience" class="form-control" data-bind="value: e().Audience">
                                <span asp-validation-for="Edit.Audience" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label asp-for="Edit.MetaDescription"></label>
                                <input asp-for="Edit.MetaDescription" class="form-control" data-bind="value: e().MetaDescription">
                                <span asp-validation-for="Edit.MetaDescription" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Edit.DiscountTypeId"></label>
                            <select asp-for="Edit.DiscountTypeId" type="text" class="form-control" data-bind="value: e().DiscountTypeId">
                                <option value="1">درصدی</option>
                                <option value="2">مبلغی</option>
                            </select>
                            <span asp-validation-for="Edit.DiscountTypeId" class="danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Edit.DiscountPercentOrDiscountAmount"></label>
                            <input asp-for="Edit.DiscountPercentOrDiscountAmount" type="text" class="form-control" data-bind="value: e().DiscountPercentOrDiscountAmount">
                            <span asp-validation-for="Edit.DiscountPercentOrDiscountAmount" class="danger"></span>
                        </div><!-- /.col-lg-6 -->

                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <hr style="visibility:hidden" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Edit.CourseFAQIds"></label>
                                <select asp-for="Edit.CourseFAQIds" class="form-control" data-bind="e().CourseFAQIds" data-placeholder="سوال‌ها را انتخاب کنید" multiple>
                                    @foreach (var item in FAQs)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Edit.CourseFAQIds" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Edit.CommentOldStudentCoursesIds"></label>
                                <select asp-for="Edit.CommentOldStudentCoursesIds" class="form-control" data-bind="e().CommentOldStudentCoursesIds" data-placeholder="نظرات را انتخاب کنید" multiple>
                                    @foreach (var item in OldStudentComments)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Edit.CommentOldStudentCoursesIds" class="danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div><p style="text-align:center">اندازه استاندارد  تصویر بکگراند 320 * 1000 می باشد</p></div>
                            <div><p style="text-align:center">اندازه استاندارد تصویر زمینه 325 * 525 می باشد</p></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label style="margin-top:15px;margin-bottom:20px;text-align:center;display:block" asp-for="Edit.BannerPicPath"></label>
                            <div class="form-group">
                                @await Html.PartialAsync("~/Views/Component/ImageUploader.cshtml",
                               new PanelPresentationLayer.ComponentModel.ImageUploader()
                                    {
                                        ButtonFarsiName = "آپلود عکس",
                                   DefualuNullImagePath = "/images/DefaultFlag.png",
                                   Name = "EditCoursesPicPath",
                                   KnockoutExpressionString = "MainViewModel.e().BannerPicPath",
                                   MaxImageHeight = 2000,
                                   MaxImageWidth = 2000,
                                   MinImageHeight = 1,
                                   MinImageWidth = 1,
                                   MaxImageSize = 500,
                                    Description = "فرمت‌های قابل قبول : JPG، JPEG و GIF \r\n حداقل اندازه مجاز تصویر : 1 در 1 پیکسل \r\n حداکثر اندازه مجاز تصویر : 2000 در 2000 پیکسل \r\n حداکثر حجم مجاز تصویر : 50 کیلوبایت"
                               })
                            </div>
                            <span asp-validation-for="Edit.BannerPicPath" class="danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label style="margin-top:15px;margin-bottom:20px;text-align:center;display:block" asp-for="Edit.LogoPicPath"></label>
                            <div class="form-group">
                                @await Html.PartialAsync("~/Views/Component/ImageUploader.cshtml",
                               new PanelPresentationLayer.ComponentModel.ImageUploader()
                                    {
                                        ButtonFarsiName = "آپلود عکس",
                                   DefualuNullImagePath = "/images/DefaultFlag.png",
                                   Name = "EditLogoPicPath",
                                   KnockoutExpressionString = "MainViewModel.e().LogoPicPath",
                                   MaxImageHeight = 2000,
                                   MaxImageWidth = 2000,
                                   MinImageHeight = 1,
                                   MinImageWidth = 1,
                                   MaxImageSize = 500,
                                    Description = "فرمت‌های قابل قبول : JPG، JPEG و GIF \r\n حداقل اندازه مجاز تصویر : 1 در 1 پیکسل \r\n حداکثر اندازه مجاز تصویر : 2000 در 2000 پیکسل \r\n حداکثر حجم مجاز تصویر : 50 کیلوبایت"
                               })
                            </div>
                            <span asp-validation-for="Edit.LogoPicPath" class="danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success btn-sm">ویرایش</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
