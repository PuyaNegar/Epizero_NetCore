@model  PanelViewModels.EditPrefix<PanelViewModels.TrainingManagementViewModels.HomeworkAnswersViewModel>

    <div id="EditBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
             <div class="modal-content">
                <form id="EditForm" role="form">
                      <div class="modal-header edit-modal">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                         <h4 class="modal-title"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  <strong>ويرايش</strong>   </h4>
                        </div>
                      <div class="modal-body">





                          <div class="form-group">
                              <label asp-for="Edit.HomeworkName"></label>
                              <input style="display:none" asp-for="Edit.HomeworkId" class="form-control" data-bind="value: e().HomeworkId">
                              <input readonly="readonly" asp-for="Edit.HomeworkName" class="form-control" data-bind="value: e().HomeworkName">
                              <span asp-validation-for="Edit.HomeworkName" class="danger"></span>
                          </div>

                          <div class="form-group">
                              <label asp-for="Edit.StudentUserName"></label>
                              <input style="display:none" asp-for="Edit.StudentUserId" class="form-control" data-bind="value: e().StudentUserId">
                              <input readonly="readonly" asp-for="Edit.StudentUserName" class="form-control" data-bind="value: e().StudentUserName">
                              <span asp-validation-for="Edit.StudentUserName" class="danger"></span>
                          </div>
                          <div class="form-group">
                              <div style="text-align:center;margin-bottom:25px;margin-top:30px">
                                  <a data-bind="attr: {'href' :e().FilePath ,'target':'_blank' }" class="btn btn-success download-filePath">مشاهده فایل ارسالی دانش آموز</a>
                              </div>
                          </div>
                          <div class="form-group">
                              <label asp-for="Edit.Grade"></label>
                              <input asp-for="Edit.Grade" class="form-control" data-bind="value: e().Grade">
                              <span asp-validation-for="Edit.Grade" class="danger"></span>
                          </div>
                          <div class="form-group">
                              <label asp-for="Edit.Description"></label>
                              <textarea rows="3" asp-for="Edit.Description" class="form-control" data-bind="value: e().Description"></textarea>
                              <span asp-validation-for="Edit.Description" class="danger"></span>
                          </div>
                      </div>
            <div class="modal-footer">
                  <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">انصراف</button>
                  <button type="submit" class="btn btn-info btn-sm">ثبت اطلاعات</button>
             </div>
            </form>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
