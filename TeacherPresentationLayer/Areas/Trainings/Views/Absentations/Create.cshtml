@model PanelViewModels.TrainingManagementViewModels.AbsentationsViewModel
<div id="AddBox" class="modal fade modal-darkorange" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="AddForm" role="form">
                <div class="modal-header create-modal">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">   <strong>افزودن</strong>   </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="form-group">
                                <label>نام جلسه</label>
                                <input asp-for="CourseMeetingName" readonly="readonly" class="form-control" data-bind="value: addAbsentationStudents().CourseMeetingName">
                                <span asp-validation-for="CourseMeetingName" class="danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12 pull-right">
                            <div class="form-group">
                                <label asp-for="Date"></label>
                                <input readonly="readonly" type="text" class="persian-date form-control toDate" data-bind="value: addAbsentationStudents().Date" />

                                <span asp-validation-for="Date" class="danger"></span>
                            </div>
                        </div>
                    </div>
                   
                    
                    <div class="form-group">
                        <label>انتخاب همه</label>
                        <input type="checkbox" class="add-checkbox-all" />

                    </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">ردیف</th>
                                <th style="text-align:center">نام دانش آموز</th>
                                <th style="text-align:center">وضعیت حضور</th>

                            </tr>
                        </thead>
                        <tbody data-bind="foreach: addAbsentationStudents().StudentsAbsentationState">
                            <tr>
                                <th scope="row" data-bind="text: $index() + 1"></th>
                                <td style="text-align:center" data-bind="text: StudentFullName"> </td>
                                <td style="text-align:center">
                                    <input  class="itemcheckbox"  type="checkbox" data-bind="checked:  IsPresent" />
                                </td>

                            </tr>
                        </tbody>
                    </table>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger " data-dismiss="modal">بستن</button>
                    <button   type="submit" class="btn btn-success btn-sm">ثبت اطلاعات</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
