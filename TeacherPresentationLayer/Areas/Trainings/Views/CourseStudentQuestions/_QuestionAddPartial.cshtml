<div class="modal fade modal-btn" id="AddAnswerModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">افزودن پاسخ </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="fileHomework">
                    <div class="row">
                        <div class="col-md-12 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>سوال دانش آموز</label>
                                <textarea id="studentQuestionContext" readonly="readonly" rows="3" type="text" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>پاسخ استاد</label>
                                <textarea id="questionAnswerContext"  rows="3" type="text" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="center col-md-12 col-sm-12 col-xs-12">
                                <div class="modal-footer">
                                    <button  type="button" class="btn btn-danger btn-sm m-t-0" data-dismiss="modal">بستن</button>
                                    <button id="questionAnswerContextSubmitBtn" type="button" class="btn btn-success  m-t-0">ثبت</button>
                                    <button id="rejectQuestionBtn" style="padding: 3px 10px;" type="button" class="btn btn-danger btn-sm pull-left m-t-0">عدم تأیید</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>