@model PanelViewModels.TeacherTrainingsViewModels.TeacherHomeworksViewModel

<div class="modal fade modal-btn" id="descriptionModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">توضیحات تکلیف</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="fileHomework">
                    <div class="row">
                        <div class="col-md-12 col-xs-12 pull-right">
                            <div class="form-group">
                                <label>توضیحات</label>
                                <textarea readonly="readonly" rows="3" type="text" class="form-control description-text"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="center col-md-12 col-sm-12 col-xs-12">
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger " data-dismiss="modal">بستن</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>