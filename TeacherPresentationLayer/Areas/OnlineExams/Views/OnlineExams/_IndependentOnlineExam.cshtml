@using Common.Enums;
@{
    var OnlineExams = (List<PanelViewModels.OnlineExamsViewModels.OnlineExamsViewModel>)ViewBag.OnlineExams;
    int i = 1;
}
<style type="text/css">
    td a {
        display: inline-block;
    }
</style>
@if (OnlineExams.Any(c => c.OnlineExamType == OnlineExamType.Independent))
{
    <div class="container">
        <div class="row">
            <div class="cl-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th class="right">آزمون</th>
                                <th class="right">تاریخ شروع</th>
                                <th class="right">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in OnlineExams.Where(c => c.OnlineExamType == OnlineExamType.Independent))
                            {
                                <tr>
                                    <th class="center">@i</th>
                                    <td>@item.Name</td>
                                    <td>@item.StartDate</td>
                                    <td style="width:600px">
                                        <a class="bg-color-red ffff bg-round-a" href="/OnlineExams/OnlineExamAnsweringPercentages?OnlineExamId=@item.Id">
                                            درصد پاسخگویی
                                        </a><a class="btn-success btn-sm ffff bg-round-a" href="/OnlineExams/OnlineExamAnalysisVideo?OnlineExamId=@item.Id">
                                            ویدیو تحلیل
                                        </a><a class="btn-info btn-sm ffff bg-round-a" href="/OnlineExams/OnlineExamTopRankingResults?OnlineExamId=@item.Id">
                                            کارنامه کلی
                                        </a><a class="bg-color-blue  btn-sm ffff bg-round-a" href="/OnlineExams/OnlineExamResults?OnlineExamId=@item.Id">
                                            کارنامه جزئی
                                        </a>
                                        <a data-Id="@item.Id" class="bg-color-blue  btn-sm ffff bg-round-a showdetail">
                                            جزئیات
                                        </a>
                                    </td>
                                </tr>
                                { i++; }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="box-empty">
                <div class="empty">
                    <img src="/assets/img/box-empty.svg">
                    <p>آزمون مستقل ایی برای شما ثبت نشده است.</p>
                </div>
            </div>
        </div>
    </div>
}
