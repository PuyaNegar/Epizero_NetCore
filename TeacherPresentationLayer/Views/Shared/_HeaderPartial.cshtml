@using Common.Functions 
@{ 
     
}
<header class="header-main col-12">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="logo-site d-flex align-items-center">
                <a href="/"> <img src="~/assets/img/logo.png" alt="مدرسه آنلاین اپیزرو" class="img-logo"></a>

                <nav class="navbar navbar-expand-lg navbar-epizero">

                    <button class="navbar-toggler mburger mburger--collapse" type="button" data-toggle="collapse"
                            data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <div class="mburger mburger--collapse">
                            <b></b>
                            <b></b>
                            <b></b>
                        </div>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <ul class="navbar-nav pr-3">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">خانه</a>
                            </li>
                            @*<li class="nav-item">
                                    <a class="nav-link" href="@(AppConfigProvider.GetSiteMainDomain() + "/Contents/AboutUs/")">بلاگ</a>
                                </li>*@
                            <li class="nav-item">
                                <a class="nav-link" href="@(AppConfigProvider.GetSiteMainDomain() + "/Contents/AboutUs/")">درباره ما</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@(AppConfigProvider.GetSiteMainDomain() + "/Contents/ContactUs")">تماس با ما</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>

            <div class="options-site d-flex align-items-center justify-content-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-register">استاد @ViewData["LastName"] </a>
                    <a id="changePasswordBtn" class="btn btn-changepass">تغییر رمز عبور</a>
                    <a title="خروج" href="/SignOut" class="btn btn-signOut "><i class="fa fa-sign-out"></i></a>
                }
            </div>
        </div>
    </div>
</header>
